<Window x:Class="Fleeter.Client.Views.RootShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fleeter.Client.Views"
        xmlns:vm="clr-namespace:Fleeter.Client.ViewModels"
        mc:Ignorable="d"
        Title="RootShell" Height="720" Width="1280" MinWidth="800" MinHeight="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <ContentControl Content="{Binding ActiveViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type vm:LoginViewModel}">
                    <local:LoginControl/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:AppShellViewModel}">
                    <local:AppShell/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>
